<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7363F0"
        android:padding="10dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/average_sans"
            android:text="About the App"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steganography Tool"
                android:textSize="22sp"
                android:textColor="#333333"
                android:fontFamily="@font/average_sans"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- What is Steganography -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔍 What is Steganography?\nSteganography is a technique used to hide secret data inside digital files like images, videos, or audio without altering the visible content significantly."
                android:textSize="18sp"
                android:textColor="#444444"
                android:fontFamily="@font/average_sans"
                android:paddingBottom="15dp"/>

            <!-- Features -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✨ Features:\n✅ Hide text inside images\n✅ Hide one image inside another\n✅ Decode hidden messages from images\n✅ High security with minimal image quality loss"
                android:textSize="18sp"
                android:textColor="#444444"
                android:fontFamily="@font/average_sans"
                android:paddingBottom="15dp"/>

            <!-- Encoding Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🛠 How to Use:\n1️⃣ Open the app and navigate to the Encode section.\n2️⃣ Select an image to use as a cover.\n3️⃣ Enter the secret text or choose an image to hide.\n4️⃣ Click 'Encode' and save the output.\n5️⃣ To decode, upload the encoded image and click 'Decode'."
                android:textSize="18sp"
                android:textColor="#444444"
                android:fontFamily="@font/average_sans"
                android:paddingBottom="15dp"/>

            <!-- PSNR and SSIM Information -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Image Quality Metrics:\n🔹 PSNR (Peak Signal-to-Noise Ratio): Measures how much noise is added during encoding. Higher is better.\n🔹 SSIM (Structural Similarity Index): Compares structural similarity between images. Closer to 1 is better."
                android:textSize="18sp"
                android:textColor="#444444"
                android:fontFamily="@font/average_sans"
                android:paddingBottom="15dp"/>

            <!-- Disclaimer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ Disclaimer:\n🔸 This app is for educational purposes only.\n🔸 Do NOT use it for illegal activities.\n🔸 The developer is not responsible for misuse."
                android:textSize="18sp"
                android:textColor="#D32F2F"
                android:fontFamily="@font/average_sans"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <!-- Developer Name with Stylish UI -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by"
                android:textSize="18sp"
                android:textColor="#333333"
                android:fontFamily="@font/average_sans"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KARAN SINGH"
                android:textSize="26sp"
                android:textColor="#7363F0"
                android:fontFamily="@font/average_sans"
                android:textStyle="bold"
                android:paddingBottom="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
